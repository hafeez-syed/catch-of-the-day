/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  max-height 0px
  padding: 0 !important
  transform translateX(-120%)
  transition 0.5s
  &.order-enter-active
    max-height 60px
    padding 2rem 0 !important
    transform translateX(0)

.order-exit
  transition 0.5s
  transform translateX(0)
&.order-exit-active
    transform translateX(120%)
    padding 0
  

.count-enter
  transform translateY(100%)
  transition 0.5s
  &.count-enter-active
    transform translateY(0)

.count-exit
  bottom 0
  left 0
  position absolute 
  transition 0.5s
  transform translateY(0)
&.order-exit-active
    transform translateX(-100%)
